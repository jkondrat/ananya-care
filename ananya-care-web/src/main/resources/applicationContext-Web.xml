<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
            http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd
            http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd">

    <mvc:annotation-driven/>

    <import resource="classpath:applicationContext-commcare-gateway.xml"/>

    <!-- get a settings instance to store your module's properties -->
    <bean id="ananyaCareSettings" class="org.motechproject.server.config.SettingsFacade" autowire="byType">
        <property name="moduleName" value="ananya-care-web"/>
        <property name="configFiles">
            <list>
                <value>classpath:ananyaCare.properties</value>
            </list>
        </property>
    </bean>

    <bean id="httpAgent" class="org.ektorp.spring.HttpClientFactoryBean">
        <property name="properties" ref="couchdbProperties"/>
    </bean>

    <bean id="ananyaCareDbInstance" class="org.ektorp.impl.StdCouchDbInstance">
        <constructor-arg>

        </constructor-arg>
    </bean>

    <bean id="ananyaCareDbConnector" class="org.ektorp.CouchDbConnector">
        <constructor-arg value="ananya-care"/>
        <constructor-arg ref="ananyaCareDbInstance"/>
    </bean>

    <bean id="motherVaccinationProcessor" class="org.motechproject.care.service.VaccinationProcessor">
        <constructor-arg>
            <list>
                <ref bean="TTService"/>
                <ref bean="TTBoosterService"/>
                <ref bean="ancService"/>
                <ref bean="anc4Service"/>
                <ref bean="motherCareService" />
            </list>
        </constructor-arg>
    </bean>

    <bean id="childVaccinationProcessor" class="org.motechproject.care.service.VaccinationProcessor">
        <constructor-arg>
            <list>
                <ref bean="measlesService"/>
                <ref bean="bcgService"/>
                <ref bean="vitaService"/>
                <ref bean="hep0Service"/>
                <ref bean="hepService"/>
                <ref bean="dptService"/>
                <ref bean="dptBoosterService"/>
                <ref bean="opv0Service"/>
                <ref bean="opvService"/>
                <ref bean="opvBoosterService"/>
                <ref bean="childCareService" />
            </list>
        </constructor-arg>
    </bean>
</beans>