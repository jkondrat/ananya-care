<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd
                           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">


    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="location" value="classpath:activemq.properties"/>
        <property name="ignoreUnresolvablePlaceholders" value="true"/>
    </bean>

    <util:properties id="couchdbProperties" location="classpath:/couchdb.properties"/>

    <context:spring-configured/>
    <context:annotation-config/>

    <import resource="classpath:applicationPlatformServerAPI.xml"/>
    <import resource="classpath:applicationSchedulerTrackingAPI.xml"/>

    <context:component-scan base-package="org.motechproject.care.schedule.listener"/>
    <context:component-scan base-package="org.motechproject.care"/>

    <bean id="ananyaCareDbInstance" class="org.ektorp.impl.StdCouchDbInstance">
        <constructor-arg>
            <bean id="httpClient" class="org.ektorp.spring.HttpClientFactoryBean"/>
        </constructor-arg>
    </bean>

    <bean id="ananyaCareDbConnector" class="org.ektorp.impl.StdCouchDbConnector">
        <constructor-arg value="ananya-care"/>
        <constructor-arg ref="ananyaCareDbInstance"/>
    </bean>
 
</beans>