<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

    <appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.EnhancedPatternLayout">
            <param name="ConversionPattern" value="[%t] - %d %-5p [%c] %m%n" />
        </layout>
    </appender>

    <appender name="FA2" class="org.apache.log4j.FileAppender">
        <param name="File" value="careProdMigration.log" />
        <param name="Append" value="true" />
        <layout class="org.apache.log4j.EnhancedPatternLayout">
            <param name="ConversionPattern" value="[%t] - %d %-5p [%c] %m%n" />
        </layout>
    </appender>

    <appender name="FA3" class="org.apache.log4j.FileAppender">
        <param name="File" value="careProdMigration_status.log" />
        <param name="Append" value="true" />
        <filter class="org.apache.log4j.varia.LevelMatchFilter">
            <param name="LevelToMatch" value="INFO" />
            <param name="AcceptOnMatch" value="true" />
        </filter>
        <filter class="org.apache.log4j.varia.DenyAllFilter" />
        <layout class="org.apache.log4j.EnhancedPatternLayout">
            <param name="ConversionPattern" value="[%t] - %d %-5p [%c] %m%n" />
        </layout>
    </appender>

    <logger name="org.motechproject.care.reporting.migration" additivity="false">
        <level value="INFO"/>
        <appender-ref ref="FA3" />
        <appender-ref ref="FA2" />
        <appender-ref ref="CONSOLE" />
    </logger>

    <root>
        <level value="ERROR" />
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FA2" />
    </root>

</log4j:configuration>